  email = hello@vivekkalyan.com
  signingkey = ~/.ssh/github.pub

[github]
  user = vivekkalyan

[credential]
  helper = cache

[include]
  path = ~/.config/git/config-os

[core]
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space
  # Treat spaces before tabs and all kinds of trailing whitespace as an error
  # [default] trailing-space: looks for spaces at the end of a line
  # [default] space-before-tab: looks for spaces before tabs at the beginning of a line

  trustctime = false
  # Make `git rebase` safer on macOS
  # More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>

[apply]
  whitespace = fix
  # Detect whitespace errors when applying a patch

[alias]
  # https://github.com/GitAlias/gitalias/
  # a = !sh -c 'cd -- ${GIT_PREFIX:-.} && git add -- "$@" && git status' --
  # https://stackoverflow.com/a/53654984
  # aa = "!git add --all && git status && :"
  a = add -v
  aa = add --all -v
  au = add --update -v
  b = branch -a
  c = commit
  cm = commit -m
  ca = commit --amend
  cam = commit --amend -m
  co = checkout
  cob = checkout -b
  df = diff --word-diff
  dfs = diff --word-diff --staged
  f = fetch
  r = restore
  rs = restore --staged
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rbiu = rebase --interactive @{upstream}
  rbs = rebase --skip
  rbm = rebase origin/master
  reset = reset HEAD $@
  s = status
  ss = status .
  p = push
  pf = push --force
  pm = push origin master

  tags = tag -l
  branches = branch -a
  remotes = remote -v
  # Show verbose output about tags, branches or remotes

  amend = commit --amend --reuse-message=HEAD
  # Add on to last commit

  init-empty = "!f() { git init && git commit --allow-empty --allow-empty-message --message 'Initial Commit'; }; f"

  show-ignored = "! git clean -ndX | perl -pe 's/Would remove/Ignored:/'"
  # show all ignored files

  default = !git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'
  # Get default branch

  bclean = "!f() { \
    echo 'Looking for local branches whose upstream is gone...'; \
    GONE_BRANCHES=$(git branch -vv | grep ': gone]' | awk '{print $1}'); \
    CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD); \
    echo \"Current branch is '$CURRENT_BRANCH'. It will not be deleted.\"; \
    BRANCHES_TO_DELETE=$(echo \"$GONE_BRANCHES\" | grep -v \"^$CURRENT_BRANCH$\"); \
    if [ -n \"$BRANCHES_TO_DELETE\" ]; then \
        echo 'Found branches whose upstream is gone:'; \
        echo \"$BRANCHES_TO_DELETE\"; \
        echo \"$BRANCHES_TO_DELETE\" | xargs git branch -D; \
        echo 'Deletion attempt finished. Check output for errors (e.g., unmerged changes).'; \
    else \
        echo 'No local branches found with gone upstreams (excluding current branch).'; \
    fi; \
    }; f \"$@\""

  bdone = "!f() { \
      DEFAULT_BRANCH=$(git default); \
      TARGET_BRANCH=${1:-$DEFAULT_BRANCH}; \
      if [ -z \"$TARGET_BRANCH\" ]; then echo 'Error: Could not determine target branch.'; return 1; fi; \
      echo \"Checking out '$TARGET_BRANCH', pulling updates, and cleaning merged branches...\"; \
      git checkout \"$TARGET_BRANCH\" && git up && git bclean \"$TARGET_BRANCH\"; \
      }; f \"$@\""

  prune = fetch --prune
  # Clean up any remote tracking references that no longer exist on remote
  # https://git-scm.com/docs/git-fetch#git-fetch--p

  uncommit = reset --soft HEAD~
  # Reset last commit
  # https://git-scm.com/docs/git-reset#git-reset-emgitresetemltmodegtltcommitgt

  unadd = reset HEAD
  # Reset something that has been added

  stash-all = stash save --include-untracked
  # Make sure to save un-added files
  # https://git-scm.com/docs/git-stash

  l = log --abbrev-commit --date=short --pretty=format:'%C(cyan)%ad %C(bold green)%h%Creset - %s%C(bold yellow)%d%Creset %C(dim white)- %aN%Creset' -n 20
  # View abbreviated SHA, description of the latest 20 commits
  ll = log --graph --topo-order --decorate --all --boundary --date=short --abbrev-commit \
  --pretty=format:'%C(cyan)%ad %C(bold green)%h%Creset - %s %C(magenta)(%ar)%C(reset)%C(bold yellow)%d%Creset %C(dim white)- %aN%Creset'
  lll = log --graph --abbrev-commit --decorate --all \
  --pretty=format:'%C(cyan)%aD%C(reset) %C(bold green)%h%C(reset) %C(white)%s%C(reset) %C(magenta)(%ar)%C(reset)%C(bold yellow)%d%C(reset)'' %C(dim white)- %an%C(reset)'
  # A nice, colorful, graphical representation of log
  # https://git-scm.com/docs/git-log
  # --all: shows all branches

[commit]
  gpgsign = true

[diff]
  renames = copies
  # Detect copies as well as renames

[diff "pandoc"]
  textconv=pandoc --to=markdown
  prompt = false

[gpg]
  format = ssh

[merge]
  # ff = only
  # Always use rebase workflow
  # Global option applies to all merges, including those done during a git pull
  # https://git-scm.com/docs/git-config#git-config-mergeff
  log = true
  # Include summaries of merged commits in newly created merge commit messages

  conflictstyle = diff3
  # Standard diff is two sets of final changes. This introduces the original text before each side's changes.
  # https://git-scm.com/docs/git-config#git-config-mergeconflictStyle

[push]
  default = simple
  # "push the current branch back to the branch whose changes are usually integrated into the current branch"
  # "refuse to push if the upstream branch’s name is different from the local one"
  # https://git-scm.com/docs/git-config#git-config-pushdefault
  autoSetupRemote = true
  # when you execute git push on a local branch that does not yet have an upstream tracking branch configured, Git will automatically:
  # - Create a corresponding branch on the remote repository (if it doesn't exist).
  # - Set the newly created remote branch as the upstream for your local branch.
[pull]
  # rebase = true
  # https://git-scm.com/docs/git-config/1.8.1.6#git-config-pullrebase

[help]
  autocorrect = 20
  # autocorrects and runs correct command after 2s

[color]
  ui = auto
  # colors output when it’s going straight to a terminal, but omits the color-control codes when the output is redirected to a pipe or a file.
  # ensures telescope picker works: https://github.com/nvim-telescope/telescope.nvim/wiki/FAQ#why-arent-git-pickers-working
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
