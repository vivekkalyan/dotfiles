# List all files colorized in long format
alias ll='eza --color=always --group-directories-first --long --group --header --modified --sort=name --git --time-style=long-iso --classify'

# List all files colorized in long format, including dot files
alias la='eza --color=always --all --group-directories-first --long --group --header --modified --sort=name --git --time-style=long-iso --classify'

# Use color output for `ls` except when piping
alias ls="ls --color=auto"

# List only directories
alias lsd='eza --color=always --all --only-dirs --long --group --header --modified --sort=name --git --time-style=long-iso --classify'

# Navigation up directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Global aliases
alias -g G='| grep'
alias -g J='| jq'
alias -g R='| rg'
alias -g L='| less'
alias -g V='| vim -'
alias -g C='| sed -r "s/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[mGK]//g" | xclip -selection clipboard'
alias -g P='xclip -selection clipboard -o > '

# Suffix alias, all files with specified extension open using defined alias
alias -s git="git clone"
alias -s pdf="zathura"
alias -s xlsx="libreoffice"
alias -s {mkv,mp4}="mpv"
alias -s {jpg,jpeg,png}="sxiv"

# Programs
alias g="git"
alias h="hledger"
alias v="vim"
alias n="notes"
alias t="task"


# Always enable colored `grep` output
alias grep='grep --color=auto'

# Process Status Table
alias ps="ps aux"

# Search Process Status (dont show searching grep process)
alias psg="ps | grep -v grep | grep -i -e VSZ -e"

# Create python server in current directory
alias pyserver="python -m http.server"

# Create notification
alias notify="notify-send \"Running job finished\""
