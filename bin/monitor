#!/bin/sh
xrandr \
    --output HDMI-0 \
        --primary \
        --mode 1920x1080 \
        --pos 1080x455 \
        --rotate normal \
    --output DP-1 \
        --mode 1920x1080 \
        --pos 0x0 \
        --rotate left \
    --output DP-0 \
        --off \
    --output DP-2 \
        --off \
    --output DP-3 \
        --off \
    --output DP-4 \
        --off \
    --output DP-5 \
        --off
